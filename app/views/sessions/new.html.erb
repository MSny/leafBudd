<% @title = "Login" %>
<div class="container">
  <div class="row valign-wrapper">
    <div class="col s12 card-panel valign">
      
      <h4 class="center-align">Log In </h4>
      
      <%= form_for(:session, url: login_path) do |f| %>
      
      <div class="row">
      <div class="row">
        <div class="input-field col s10 offset-s1">
          <i class="mdi-content-mail prefix"></i>
          
          <%= f.email_field :email, id:"email", class:"validate" %>
          <label for="email">Enter Your Email</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s10 offset-s1">
          <i class="mdi-action-lock-outline prefix"></i>
          <%= f.password_field :password, id:"password", class: "validate" %>
          <label for="password">Enter Your Password</label>
        </div>
      </div>

      <!-- Switch: Lets users keep their passwords! -->
    <div class="row">
      <div class="switch col s3 offset-s3">
      <%= f.label :remember_me?, class: "large_label" %>  <br />
        <label>
          No <i class="mdi-navigation-close"></i>
          <%= f.check_box :remember_me, id:"icon_prefix" %>
          <span class="lever"></span>
          Yes <i class="mdi-navigation-check"></i>
        </label>
      </div>

      <div class="submit-field col s5 offset-s1">
        <button class="btn primary waves-effect waves-light" type="submit" name="action">log in <i class="mdi-action-lock-open right"></i>
        </button>
      </div>

        <% end %>
    </div>
    <div class="row">
      <p class="center-align"> New user? &nbsp;

      <%= link_to new_user_path do %>
        Sign up!  <i class="mdi-social-group-add"></i> 
      <% end %>
       </p>
    </div>
</div>
</div>
</div>