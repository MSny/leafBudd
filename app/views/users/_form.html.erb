<%= form_for(@user) do |f| %>

  <div class="row">
    <div class="input-field col s10 offset-s1">
      <i class="mdi-action-face-unlock prefix"></i>
      <% render 'partials/errors', object: f.object %>
      <%= f.text_field :name, id:"name", class:"validate" %>
      <label for="name">Enter Your Name</label>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s10 offset-s1">
      <i class="mdi-content-mail prefix"></i>
      
      <%= f.text_field :email, id:"email", class:"validate" %>
      <label for="email">Enter Your Email</label>
    </div>
  </div>
    <div class="row">
      <div class="input-field col s10 offset-s1">
        <i class="mdi-action-lock-outline prefix"></i>
        
        <%= f.password_field :password, id:"password", class:"validate" %>
        <label for="password">Enter a Password</label>
      </div>
    </div>
  <div class="row">
    <div class="input-field col s10 offset-s1">
      <i class="mdi-action-verified-user prefix"></i>
      
      <%= f.password_field :password_confirmation, id:"password_confirmation", class:"validate" %>
      <label for="password_confirmation">Confirm Your Password</label>
    </div>
  </div>
  <div class="row">
    <div class="submit-field col s5 offset-s8">
      <button class="btn primary waves-effect waves-light" type="submit" name="action">Submit <i class="mdi-content-send right"></i>
      </button>
    </div>
  </div>
<% end %>
