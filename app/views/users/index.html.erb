<div class="container">
<h3 class="center-align">Listing Users</h3>
<% if @users %>
  <div class="row">
    <div class="col s12 l14">
    <% @users.each do |user| %>
      <div class="col l5 s14 card-panel" style="margin-right: 10px">
        <span class="right"><%= gravatar_for user, size: 50 %></span>
        <ul>
        <li><h4 class="truncate"><%= link_to user.name, user %></h4><small>- User since: <%= time_ago_in_words(user.created_at) %></small></li>
        <li><%= user.email %></li>
        <li><%= user.admin %></li>
        <li><%= link_to 'Show', user %> &nbsp;
        <%= link_to 'Edit', edit_user_path(user) %> &nbsp;
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div>
    <% end %>
    </div>
  </div>
<% else %>
<div>
<h3>Sorry there are no Users at this time but you can fix that!</h3>

<% end %>
<div class="row card-panel">
  <div class="col s12">
    <div class="col s12 m6 offset-m1">
      <span>Want to appear here on the Hall of Fame?</span>
    </div>
    <div class="col s12 m5 offset-m1">
      <%= link_to new_user_path, class:"btn waves-effect waves-light left cyan darken-1" do %>
      <span><i class="mdi-action-account-circle"></i> Sign up today
      </span>
      <% end %>
    </div>
  </div>
</div>
</div>